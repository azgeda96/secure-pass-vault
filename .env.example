# ===========================================
# Vault Access - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Security - CHANGE THESE IN PRODUCTION!
# ===========================================

# PostgreSQL password (minimum 32 characters recommended)
POSTGRES_PASSWORD=your-super-secret-password-change-me

# JWT Secret for authentication (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# ===========================================
# URLs Configuration
# ===========================================

# External API URL (your domain)
API_EXTERNAL_URL=http://localhost:8000

# Frontend URL
SITE_URL=http://localhost:3000

# Additional redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# ===========================================
# Auth Configuration
# ===========================================

# Disable new user signups
DISABLE_SIGNUP=false

# Enable email signup
ENABLE_EMAIL_SIGNUP=true

# Auto-confirm emails (set to false in production with SMTP)
ENABLE_EMAIL_AUTOCONFIRM=true

# JWT token expiry in seconds (3600 = 1 hour)
JWT_EXPIRY=3600

# ===========================================
# SMTP Configuration (Optional - for emails)
# ===========================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@example.com

